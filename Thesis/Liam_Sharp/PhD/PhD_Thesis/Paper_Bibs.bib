@Article{Moffett2019,
  author   = {Moffett, Steven X. and Klein, Eric A. and Brannigan, Grace and Martin, Joseph V.},
  journal  = {PLoS ONE},
  title    = {{L-3,3$^\prime$,5-triiodothyronine and pregnenolone sulfate inhibit Torpedo nicotinic acetylcholine receptors}},
