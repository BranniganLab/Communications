doi = {10.1128/mbio.00107-19},
file = {:Users/liamsharp/Documents/Mendely{\_}Papers//Stankeviciute et al. - 2019 - Caulobacter crescentus Adapts to Phosphate Starvation by Synthesizing Anionic Glycoglycerolipids and a Nov.pdf:pdf},
