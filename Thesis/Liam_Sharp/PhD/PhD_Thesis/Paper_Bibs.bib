issn = {1553734X},
journal = {PLoS Computational Biology},
number = {5},
pmid = {22693438},
title = {{General anesthetics predicted to block the GLIC pore with micromolar affinity}},
volume = {8},
year = {2012}
}
@article{Spies2006,
