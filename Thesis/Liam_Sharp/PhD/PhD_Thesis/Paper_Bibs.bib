doi = {10.1016/j.brainresrev.2004.06.008},
isbn = {0165-0173},
issn = {01650173},
journal = {Brain Research Reviews},
keywords = {Ligand-gated ion channels,Lipid modulation,Nicotinic acetylcholine receptor function},
number = {1-3},
pages = {71--95},
pmid = {15572164},
title = {{Structural basis for lipid modulation of nicotinic acetylcholine receptor function}},
volume = {47},
year = {2004}
}
