doi = {10.1016/j.sbi.2017.01.003},
file = {:Users/liamsharp/Documents/Mendely{\_}Papers/Patel, Qi, Im - 2017 - Modeling and simulation of bacterial outer membranes and interactions with membrane proteins.pdf:pdf},
