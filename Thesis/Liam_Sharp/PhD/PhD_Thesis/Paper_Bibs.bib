journal = {Journal of Biological Chemistry},
number = {7},
pages = {2729--2740},
pmid = {28031459},
title = {{{\$}\alpha{\$} 4{\$}\beta{\$}2Nicotinic Acetylcholine Receptors; relationships between subunit stoichiometry and function at the single channel level}},
