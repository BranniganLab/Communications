journal = {Biochemistry},
number = {9},
pages = {1492--1504},
pmid = {21241055},
title = {{Gap junction hemichannel interactions with zwitterionic lipid, anionic lipid, and cholesterol: Molecular simulation studies}},
volume = {50},
year = {2011}
}
@article{Bhushan1993,
