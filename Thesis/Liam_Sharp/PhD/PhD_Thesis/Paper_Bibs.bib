keywords = {Assembly,Folding,Lipid-sensing,Lipids,M4,Neurosteroids,Nicotinic acetylcholine receptor,Potentiation,Trafficking,Trans-membrane,Uncoupling},
number = {PB},
pages = {157--168},
pmid = {25433148},
title = {{The role of the M4 lipid-sensor in the folding, trafficking, and allosteric modulation of nicotinic acetylcholine receptors}},
