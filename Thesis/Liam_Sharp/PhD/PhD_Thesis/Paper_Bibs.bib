year = {2019}
}
@article{Piggot2017,
abstract = {{\textcopyright} 2017 American Chemical Society. For molecular dynamics simulations of biological membrane systems to live up to the potential of providing accurate atomic level detail into membrane properties and functions, it is essential that the force fields used to model such systems are as accurate as possible. One membrane property that is often used to assess force field accuracy is the carbon-hydrogen (or carbon-deuterium) order parameters of the lipid tails, which can be accurately measured using experimental NMR techniques. There are a variety of analysis tools available to calculate these order parameters from simulations and it is essential that these computational tools work correctly to ensure the accurate assessment of the simulation force fields. In this work we compare many of these computational tools for calculating the order parameters of POPC membranes. While tools that work on all-Atom systems and tools that work on saturated lipid tails in general work extremely well, we demonstrate that the majority of the tested tools that calculate the order parameters for unsaturated united-Atom lipid tails do so incorrectly. We identify tools that do perform accurate calculations and include one such program with this work, enabling rapid and accurate calculation of united-Atom lipid order parameters. Furthermore, we discuss cases in which it is nontrivial to appropriately predict the unsaturated carbon order parameters in united-Atom systems. Finally, we examine order parameter splitting for carbon 2 in sn-2 lipid chains, demonstrating substantial deviations from experimental values in several all-Atom and united-Atom lipid force fields.},
author = {Piggot, Thomas J. and Allison, Jane R. and Sessions, Richard B. and Essex, Jonathan W.},
doi = {10.1021/acs.jctc.7b00643},
issn = {15499626},
journal = {Journal of Chemical Theory and Computation},
month = {nov},
number = {11},
pages = {5683--5696},
publisher = {American Chemical Society},
title = {{On the Calculation of Acyl Chain Order Parameters from Lipid Simulations}},
