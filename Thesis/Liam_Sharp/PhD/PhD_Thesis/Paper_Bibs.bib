arxivId = {13960/t8jd4qr3m},
author = {Reynwar, Benedict J. and Illya, Gregoria and Harmandaris, Vagelis A. and M{\"{u}}ller, Martin M. and Kremer, Kurt and Deserno, Markus},
doi = {10.1038/nature05840},
