doi = {10.1371/journal.pone.0210564},
file = {:Users/liamsharp/Documents/Mendely{\_}Papers/Go et al. - 2019 - A compact holographic projector module for high-resolution 3D multi-site two-photon photostimulation.pdf:pdf},
isbn = {1111111111},
title = {{A compact holographic projector module for high-resolution 3D multi-site two-photon photostimulation}},
url = {https://doi.org/10.1371/journal.pone.0210564},
year = {2019}
}
