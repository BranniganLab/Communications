doi = {10.1016/j.bpj.2016.12.023},
file = {:Users/liamsharp/Documents/Mendely{\_}Papers/Galimzyanov et al. - 2017 - Undulations Drive Domain Registration from the Two Membrane Leaflets.pdf:pdf},
