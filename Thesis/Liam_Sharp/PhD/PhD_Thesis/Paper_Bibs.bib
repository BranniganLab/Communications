  isbn     = {1529-2401 (Electronic){\$}\backslash{\$}n0270-6474 (Linking)},
  keywords = {PSD-95,Quantum Dots,ciliary,nicotinic receptor,scaffold,synapse,trafficking},
  pmid     = {20592206},
  url      = {www.jneurosci.org http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.6236-09.2010},
}

@Article{Picciotto2008,
