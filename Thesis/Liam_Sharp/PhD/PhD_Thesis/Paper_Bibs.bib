issn = {00062960},
journal = {Biochemistry},
number = {5},
pages = {843--849},
pmid = {10653627},
title = {{The effect of sterol structure on membrane lipid domains reveals how cholesterol can induce lipid domain formation}},
volume = {39},
year = {2000}
}

