@article{Liu2010,
abstract = {The neuronal alpha4beta2 nicotinic acetylcholine receptor (nAChR)
is a potential molecular target for general anesthetics. It is unclear,
however, whether anesthetic action produces the same effect on the
open and closed channels. Computations parallel to our previous open
channel study (J. Phys. Chem. B 2009, 113, 12581) were performed
