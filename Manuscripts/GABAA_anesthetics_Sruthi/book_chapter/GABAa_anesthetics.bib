journal = {Current medicinal chemistry},
keywords = {binding free energy,computational chemistry,drug discovery,in silico,logp,protein crystallography,scoring function,screening,water molecules},
pages = {3093--3118},
pmid = {15579003},
title = {{Free energy of ligand binding to protein: evaluation of the contribution of water molecules by computational methods.}},
volume = {11},
year = {2004}
}
