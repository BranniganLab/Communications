@article{Akk2007,
abstract = {Neuroactive steroids have some of their most potent actions by augmenting
the function of GABA(A) receptors. Endogenous steroid actions on
GABA(A) receptors may underlie important effects on mood and behavior.
Exogenous neuroactive steroids have potential as anesthetics, anticonvulsants,
and neuroprotectants. We have taken multiple approaches to understand
