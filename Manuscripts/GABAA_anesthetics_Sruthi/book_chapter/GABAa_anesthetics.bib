}
@article{daCosta2002,
abstract = {The structural and functional properties of reconstituted nicotinic
acetylcholine receptor membranes composed of phosphatidyl choline
either with or without cholesterol and/or phosphatidic acid have
been examined to test the hypothesis that receptor conformational
equilibria are modulated by the physical properties of the surrounding
lipid environment. Spectroscopic and chemical labeling data indicate
that the receptor in phosphatidylcholine alone is stabilized in a
