@article{Richards1978,
abstract = {The interaction of the n-alkanols with lipid bilayers and excitable
membranes shows that there is no simple correlation between conduction
block and any of the perturbations of bilayer structure currently
proposed as unitary mechanisms of local anaesthetic action. We propose
instead that the n-alkanols act by direct interaction with target
