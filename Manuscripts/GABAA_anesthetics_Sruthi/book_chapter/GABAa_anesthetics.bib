institution = {Department of Anaesthesia and Critical Care, Massachusetts General Hospital, Department of Biological Chemistry and Molecular Pharmacology, Harvard Medical School, Boston, MA, USA.},
journal = {Br. J. Anaesth.},
keywords = {Allosteric Site; Anesthesia,General,General; Anesthetics,Physical; Humans; Ion Channels,drug effects; Photoaffinity Labels; Physicochemic,pharmacology; Chemistry},
month = {jul},
