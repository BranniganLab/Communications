@article{Hosie2006,
abstract = {Inhibitory neurotransmission mediated by GABA(A) receptors can be
modulated by the endogenous neurosteroids, allopregnanolone and tetrahydro-deoxycorticosterone.
Neurosteroids are synthesized de novo in the brain during stress,
pregnancyand after ethanol consumption, and disrupted steroid regulation
