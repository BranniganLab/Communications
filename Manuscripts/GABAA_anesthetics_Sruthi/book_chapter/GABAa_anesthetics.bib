@article{Prevost2012,
abstract = {Pentameric ligand-gated ion channels mediate signal transduction through
conformational transitions between closed-pore and open-pore states.
To stabilize a closed conformation of GLIC, a bacterial proton-gated
homolog from Gloeobacter violaceus whose open structure is known,
we separately generated either four cross-links or two single mutations.
