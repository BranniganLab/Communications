@article{Olsen1990,
abstract = {The major type of receptor for the inhibitory neurotransmitter gamma-aminobutyric
acid (GABA), called the GABAA receptor, is a member of a gene superfamily
of ligand-gated ion channels. This receptor is a hetero-oligomeric
protein composed of several distinct polypeptide types (alpha, beta,
gamma, and delta). Molecular cloning of these polypeptides reveals
