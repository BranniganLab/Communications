@article{Chiara2012,
abstract = {The $\gamma$-aminobutyric acid type A receptor (GABA(A)R) is a target for
general anesthetics of diverse chemical structures, which act as
positive allosteric modulators at clinical doses. Previously, in
a heterogeneous mixture of GABA(A)Rs purified from bovine brain,
