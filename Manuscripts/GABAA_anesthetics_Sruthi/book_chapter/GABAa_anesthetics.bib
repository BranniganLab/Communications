institution = {National Center for Supercomputing Applications, Department of Molecular and Integrative Physiology University of Illinois at Urbana-Champaign, USA. rendong@ncsa.uiuc.edu},
journal = {Channels (Austin)},
keywords = {Amino Acid,Animals; Archaea,Protein; Humans; Sequence Alignment; Sequence Ana,Protein; Sequence Homology,genetics; Archaeal Proteins,genetics; Bacteria,genetics; Bacterial Proteins,genetics; Databases},
number = {4},
pages = {325--343},
pmid = {21918370},
title = {{Identifying bacterial and archaeal homologs of pentameric ligand-gated ion channel (pLGIC) family using domain-based and alignment-based approaches.}},
