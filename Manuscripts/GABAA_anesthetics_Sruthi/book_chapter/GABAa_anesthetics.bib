year = {1993}
}
@article{Vemparala2006,
abstract = {Molecular dynamics simulations have been performed to investigate
the partitioning of the volatile anesthetic halothane from an aqueous
phase into a coexisting hydrated bilayer, composed of 1,2-dioleoyl-sn-glycero-3-phosphocholine
(DOPC) lipids, with embedded alpha-helical peptide bundles based
