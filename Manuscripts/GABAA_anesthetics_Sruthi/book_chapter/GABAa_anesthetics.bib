number = {3},
pages = {1047--1069},
pmid = {9138555},
title = {{The statistical-thermodynamic basis for computation of binding affinities: a critical review.}},
url = {http://dx.doi.org/10.1016/S0006-3495(97)78756-3},
volume = {72},
year = {1997}
}
@article{Chen2010,
