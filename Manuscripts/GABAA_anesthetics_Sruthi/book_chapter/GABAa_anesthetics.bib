@article{Olsen2011,
abstract = {PURPOSE: The purpose of this review is to summarize current knowledge of detailed biochemical evidence for the role of $\gamma$-aminobutyric acid type A receptors (GABA(A)-Rs) in the mechanisms of general anesthesia.

