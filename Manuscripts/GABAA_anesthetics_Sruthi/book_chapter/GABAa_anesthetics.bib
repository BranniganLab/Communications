@article{Shouffani1990,
abstract = {The reconstruction of the purified sodium- and chloride-coupled gamma-aminobutyric
acid transporter from rat brain into asolectin liposomes requires
the addition of brain lipids (Radian, R., and Kanner, B. I. (1985)
J. Biol. Chem. 260, 11859-11865). The reconstitution assay was used
