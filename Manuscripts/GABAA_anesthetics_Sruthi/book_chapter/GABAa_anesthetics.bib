@article{Ellena1983,
abstract = {Functional membranes containing purified Torpedo californica acetylcholine
receptor and dioleoylphosphatidylcholine (DOPC) were prepared by
a cholate dialysis procedure with lipid to protein ratios of 100-400
to 1 (mol/mol). Spin-labeled lipids were incorporated into the reconstituted
membranes and into native membranes prepared from Torpedo electroplax,
