@article{Li2009,
abstract = {Photoaffinity labeling of gamma-aminobutyric acid type A (GABA(A))-receptors
(GABA(A)R) with an etomidate analog and mutational analyses of direct
activation of GABA(A)R by neurosteroids have each led to the proposal
that these structurally distinct general anesthetics bind to sites
in GABA(A)Rs in the transmembrane domain at the interface between
the beta and alpha subunits. We tested whether the two ligand binding
sites might overlap by examining whether neuroactive steroids inhibited
etomidate analog photolabeling. We previously identified (Li, G.
