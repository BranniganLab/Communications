keywords = {2D-diffusion,Acetylcholine receptor,Cholesterol,Lateral mobility,Membrane domains,Receptor clustering},
number = {SEP},
pmid = {25414663},
title = {{Cell-surface translational dynamics of nicotinic acetylcholine receptors}},
url = {www.frontiersin.org},
