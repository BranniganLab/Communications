number = {9},
pages = {1493--1506},
pmid = {28577973},
publisher = {Elsevier B.V.},
title = {{Membrane-lipid therapy: A historical perspective of membrane-targeted therapies — From lipid bilayer structure to the pathophysiological regulation of cells}},
