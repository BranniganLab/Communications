file = {::},
journal = {International Scholarly Research Network ISRN Obesity},
number = {14},
title = {{Docosahexaenoic Acid Protects Muscle Cells from Palmitate-Induced Atrophy}},
url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC3914282/pdf/ISRN.OBESITY2012-647348.pdf},
volume = {647348},
year = {2012}
}
