issn = {18792618},
journal = {Biochimica et Biophysica Acta - Molecular and Cell Biology of Lipids},
keywords = {Cholesterol binding,Ligand orientation,Mass spectrometry,Pentameric ligand-gated ion channel,Photoaffinity labeling,Protein-sterol interactions},
