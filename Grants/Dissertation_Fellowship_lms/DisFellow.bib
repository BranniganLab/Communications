file = {:Users/liamsharp/Library/Application Support/Mendeley Desktop/Downloaded/Sharp, Salari, Brannigan - 2019 - Boundary lipids of the nicotinic acetylcholine receptor Spontaneous partitioning via coarse-grained mo.pdf:pdf},
issn = {18792642},
journal = {Biochimica et Biophysica Acta - Biomembranes},
keywords = {Cholesterol,Docosahexaenoic acid (DHA),Lipid rafts,Lipid-protein interactions,Liquid disorder (l do ),Liquid order (l o ),Nicotinic acetylcholine receptor,Polyunsaturated fatty acids (PUFA),nAChR partitioning},
month = {apr},
