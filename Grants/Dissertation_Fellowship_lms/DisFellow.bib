issn = {00063185},
journal = {Biological Bulletin},
number = {1},
pages = {47--52},
pmid = {23493508},
title = {{Microtransplantation of cellular membranes from squid stellate ganglion reveals ionotropic GABA receptors}},
volume = {224},
year = {2013}
