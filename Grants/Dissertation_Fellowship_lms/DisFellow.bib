file = {::},
issn = {17422094},
journal = {Journal of Neuroinflammation},
keywords = {Astrocytes,NF-ΚB pathway,Nrf2 pathway,$\alpha$7 nicotinic acetylcholine receptors},
number = {1},
pmid = {28950908},
title = {{Anti-inflammatory effects of astroglial $\alpha$7 nicotinic acetylcholine receptors are mediated by inhibition of the NF-ΚB pathway and activation of the Nrf2 pathway}},
