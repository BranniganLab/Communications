file = {::},
keywords = {7 nicotinic acetylcholine receptor,actin cy-toskeleton,ciliary ganglion,lipid rafts,receptor clusters,somatic spines,synapse formation},
title = {{Membrane Lipid Rafts Are Necessary for the Maintenance of the 7 Nicotinic Acetylcholine Receptor in Somatic Spines of Ciliary Neurons}},
url = {http://www.jneurosci.org/content/jneuro/21/2/504.full.pdf},
year = {1991}
}
