doi = {10.1371/journal.pone.0151934},
file = {:Users/liamsharp/Library/Application Support/Mendeley Desktop/Downloaded/Jaiteh, Taly, H{\'{e}}nin - 2016 - Evolution of pentameric ligand-gated ion channels Pro-loop receptors.pdf:pdf},
